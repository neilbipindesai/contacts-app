<h1>New Contact</h1>
<%= form_tag "/contacts", method: "post" do %>
  <div class="form-group">
    First Name: <input type="text" class="form-control" name="first_name">
  </div>
  <div class="form-group">
    Middle Name: <input type="text" class="form-control" name="middle_name">
  </div>
  <div class="form-group">
    Last Name: <input type="text" class="form-control" name="last_name">
  </div>
  <div class="form-group">
    Email: <input type="text" class="form-control" name="email">
  </div>
  <div class="form-group">
    Phone number: <input type="text" class="form-control" name="phone_number">
  </div>
  <div class="form-group">
    Bio: <input type="text" class="form-control" name="bio">
  </div>
  <input type="submit" class="btn btn-default" value="Create contact">
<% end %>